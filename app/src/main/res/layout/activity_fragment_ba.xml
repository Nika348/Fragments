<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBA"
    android:id="@id/fragmentBA"
    android:background="?attr/colorSurface">

    <Button
        android:id="@+id/open_fragment_bb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_fragment_bb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_ba" />

    <TextView
        android:id="@+id/fragment_ba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_ba"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>